            android:id="@+id/move"
            android:icon="@drawable/ic_white_library_books_24px"
            android:orderInCategory="4"
            android:title="@string/item_move"
            app:showAsAction="ifRoom" />
        <item
            android:id="@+id/delete"
            android:icon="@drawable/ic_white_delete_sweep_24px"
            android:orderInCategory="5"
            android:title="@string/item_delete"
            app:showAsAction="ifRoom" />
    </group>
    <group android:id="@+id/mark">
        <item
            android:id="@+id/allmark"
            android:icon="@drawable/ic_white_check_box_24px"
            android:orderInCategory="6"
            android:title="@string/item_all_mark"
            app:showAsAction="always" />
        <item
            android:id="@+id/unmark"
            android:icon="@drawable/ic_white_check_box_outline_blank_24px"
            android:orderInCategory="7"
