<?xml version="1.0" encoding="utf-8"?>
<menu
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.eduardf.audit.ReferenceManager"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:id="@+id/search"
        android:icon="@drawable/ic_search_white_24dp"
        android:orderInCategory="1"
        android:title="@string/item_search"
        app:actionViewClass="android.support.v7.widget.SearchView"
        app:showAsAction="always" />

    <group android:id="@+id/is_checked">
        <item
            android:id="@+id/edit"
            android:icon="@drawable/ic_white_edit_24px"
            android:orderInCategory="2"
            android:title="@string/item_edit"
            app:showAsAction="ifRoom" />
        <item
            android:id="@+id/copy"
            android:icon="@drawable/ic_white_file_copy_24px"
            android:orderInCategory="3"
            android:title="@string/item_copy"
