<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TypeActivity"
    tools:showIn="@layout/activity_type">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/field_horizontal_margin"
            android:orientation="horizontal">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_name" />

        </android.support.design.widget.TextInputLayout>

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/tab1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/field_vertical_margin"
                            android:layout_marginEnd="@dimen/field_horizontal_margin"
                            android:layout_marginStart="@dimen/field_horizontal_margin"
                            android:layout_marginTop="@dimen/field_vertical_margin"
                            android:baselineAligned="false"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:descendantFocusability="beforeDescendants"
                                android:focusable="true"
                                android:focusableInTouchMode="true">

                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_criterion"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true">

                                    <EditText
                                        android:id="@+id/input_criterion"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24px"
                                        android:hint="@string/txt_crit"
                                        android:maxLength="55"
                                        android:nextFocusForward="@id/input_value" />

                                </android.support.design.widget.TextInputLayout>

                                <Spinner
                                    android:id="@+id/criterion_spinner"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="60dp"
                                    android:background="#00000000"
                                    android:spinnerMode="dropdown"
                                    android:visibility="gone" />

                            </RelativeLayout>

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_value"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="3"
                                android:hint="@string/txt_val">


                                <android.support.design.widget.TextInputEditText
                                    android:id="@+id/input_value"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:maxLength="9" />

                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/field_vertical_margin"
                            android:layout_marginEnd="@dimen/field_horizontal_margin"
                            android:layout_marginStart="@dimen/field_horizontal_margin"
                            android:layout_marginTop="@dimen/field_vertical_margin"
                            android:descendantFocusability="beforeDescendants"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:descendantFocusability="beforeDescendants"
                                android:focusable="true"
                                android:focusableInTouchMode="true">


                                <android.support.design.widget.TextInputLayout
                                    android:id="@+id/input_layout_select"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <EditText
                                        android:id="@+id/input_select"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24px"
                                        android:hint="@string/txt_slct"
                                        android:maxLength="55" />

                                </android.support.design.widget.TextInputLayout>

                                <Spinner
                                    android:id="@+id/select_spinner"
                                    android:layout_width="1dp"
                                    android:layout_height="1dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentTop="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginTop="60dp"
                                    android:background="#00000000"
                                    android:spinnerMode="dropdown"
                                    android:visibility="gone" />

                            </RelativeLayout>

                        </LinearLayout>

                        <com.example.eduardf.audit.AutoGridLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="@dimen/field_horizontal_margin"
                            android:columnCount="5"
                            app:columnWidth="300dp">

                            <Switch
                                android:id="@+id/clearCopy"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:switchPadding="@dimen/activity_horizontal_margin"
                                android:text="@string/txt_clearCopy" />

                            <Switch
                                android:id="@+id/openWithIndicators"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:switchPadding="@dimen/activity_horizontal_margin"
                                android:text="@string/txt_openInds" />

                            <Switch
                                android:id="@+id/showSubject"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:switchPadding="@dimen/activity_horizontal_margin"
                                android:text="@string/txt_showSubj" />

                            <Switch
                                android:id="@+id/fillActualValue"
                                android:layout_width="280dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:switchPadding="@dimen/activity_horizontal_margin"
                                android:text="@string/txt_autofill" />

                        </com.example.eduardf.audit.AutoGridLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/tab3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    </LinearLayout>
                </FrameLayout>
            </LinearLayout>
        </TabHost>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>