<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.eduardf.audit">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PhotoVideo" />
        <activity
            android:name=".TaskList"
            android:label="@string/title_activity_task_list"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AuditTask"
            android:label="@string/title_activity_audit_task"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TreeTable"
            android:label="@string/title_activity_select_fttable"
            android:theme="@style/AppTheme.NoActionBar">
            >
        </activity>
        <activity
            android:name=".ActivityType"
            android:label="@string/title_activity_type"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".GroupTable"
            android:label="@string/title_activity_group_table"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReferenceManager"
            android:label="@string/title_activity_reference_maneger"></activity>
    </application>

</manifest>